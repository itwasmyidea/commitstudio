{
  "name": "commitstudio",
  "version": "0.1.5",
  "description": "An AI-powered tool that analyzes git diffs and posts insightful comments to GitHub",
  "type": "module",
  "bin": {
    "commitstudio": "./bin/cli.js"
  },
  "main": "./src/index.js",
  "engines": {
    "node": ">=18.0.0"
  },
  "scripts": {
    "start": "node ./bin/cli.js",
    "test": "vitest run",
    "test:watch": "vitest",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "format": "prettier --write .",
    "prepare": "husky install",
    "prepublishOnly": "npm run test",
    "version": "npm run format && git add -A src",
    "postversion": "git push && git push --tags"
  },
  "keywords": [
    "git",
    "github",
    "ai",
    "code-review",
    "openai",
    "cli",
    "developer-tools",
    "pr-review",
    "diff-analyzer"
  ],
  "author": "Ali Geramy",
  "license": "MIT",
  "dependencies": {
    "@octokit/auth-oauth-device": "^7.1.5",
    "@octokit/rest": "^20.0.2",
    "chalk": "^5.3.0",
    "commander": "^12.0.0",
    "conf": "^12.0.0",
    "dotenv": "^16.4.5",
    "enquirer": "^2.4.1",
    "execa": "^8.0.1",
    "listr2": "^8.0.1",
    "open": "^10.0.3",
    "openai": "^4.28.4",
    "ora": "^8.0.1",
    "p-limit": "^4.0.0",
    "simple-git": "^3.22.0",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "eslint": "^8.57.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-import": "^2.29.1",
    "eslint-plugin-node": "^11.1.0",
    "husky": "^9.0.11",
    "lint-staged": "^15.2.0",
    "prettier": "^3.2.5",
    "vitest": "^3.1.2",
    "vitest-mock-extended": "^1.3.1"
  },
  "lint-staged": {
    "*.js": "eslint --fix",
    "*.{js,json,md}": "prettier --write"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/aligeramy/commitstudio.git"
  },
  "bugs": {
    "url": "https://github.com/aligeramy/commitstudio/issues"
  },
  "homepage": "https://commitstud.io",
  "publishConfig": {
    "access": "public"
  },
  "files": [
    "bin/",
    "src/",
    "README.md",
    "LICENSE"
  ]
}
